# 不同的环境使用不同的配置
# 默认的profile为dev，其他环境通过指定启动参数使用不同的profile，比如：
# 测试环境：java -jar xxx.jar --spring.profiles.active=test
# 生产环境：java -jar xxx.jar --spring.profiles.active=prod
spring: 
  #profiles: 
    #active: dev
  #datasource: 
    # mysql
    #username: root
    #password: 123456
    #driver-class-name: com.mysql.jdbc.Driver
    # 默认使用Tomcat自带连接池
    #maximum-pool-size: 50
    #max-idle: 10
    #max-wait: 5000
    #min-idle: 10
    #initial-size: 5
    #validation-query: SELECT 1
    #test-on-borrow: false
    #test-while-idle: true
    #time-between-eviction-runs-millis: 18800
    
  jpa: 
    hibernate: 
      ddl-auto: update
    show-sql: true
    
  jackson: 
    serialization:
      indent_output: true
      
  kafka: 
    bootstrap-servers: 192.168.0.152:9092,192.168.0.152:9093
    consumer: 
      group-id: myGroup
    template: 
      default-topic: my-replicated-topic
    listener: 
      concurrency: 3
    producer: 
      batch-size: 1000
      
  #redis: # redis
    #database: 1
    #host: 127.0.0.1
    #password:   
    #port: 6379
    #pool:
      #max-idle: 8
      #min-idle: 1
      #max-active: 8
      #max-wait: -1
      #sentinel: 
        #master=  
      #sentinel:
        #nodes=  
    #timeout: 60000
  
  # rabbitmq 
  #rabbitmq: 
  #  host: localhost
  #  port: 5672
  #  username: spring
  #  password: 123456

# tomcat
server:
  tomcat: 
    # 默认200
    max-threads: 1000
    uri-encoding: UTF-8
  error: 
    path: /error
  port: 8080
  #自定义session失效时间
  session: 
    timeout: 60

#自定义属性
name: zhangsan
age: 30
address: hanzhou
remark: my name is ${name}

# mybatis
mybatis: 
  config-location: classpath:mybatis-config.xml
  
  
